---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import CollectionCard from "@components/CollectionCard";
import getSortedPosts from "@utils/getSortedPosts";
import getSortedWork from "@utils/getSortedWork";
import getSortedDemos from "@utils/getSortedDemos";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);

const works = await getCollection("work");

const sortedWorks = getSortedWork(works);
const featuredWorks = sortedWorks.filter(({ data }) => data.featured);

const demos = await getCollection("demos");

const sortedDemos = getSortedDemos(demos);
const featuredDemos = sortedDemos.filter(({ data }) => data.featured);
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <p>
        I'm a Software Engineer with 13+ years of experience building web,
        mobile, and cross-platform TV applications across startups, political
        campaigns, and civic technology.
      </p>
      <LinkButton
        className="font-medium text-skin-accent decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0"
        href="/about"
      >
        More about me
      </LinkButton>
    </section>
    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured-posts">
            <h3>Recent Posts</h3>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <CollectionCard
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                  showDatetime={true}
                />
              ))}
            </ul>
          </section>
        </>
      )
    }

    {
      featuredDemos.length > 0 && (
        <>
          <section id="featured-demos">
            <h3>Interactive Demos</h3>
            <ul>
              {featuredDemos.map(({ data, slug }) => (
                <CollectionCard
                  href={`/demos/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
        </>
      )
    }

    {
      featuredWorks.length > 0 && (
        <>
          <section id="featured-work">
            <h3>Featured Work</h3>
            <ul>
              {featuredWorks.map(({ data, slug }) => (
                <CollectionCard
                  href={`/work/${slug}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
        </>
      )
    }
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #main-content h3 {
    @apply mb-6 text-xl font-semibold;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured-posts,
  #featured-work,
  #featured-demos,
  #recent-posts {
    @apply py-4;
  }

  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
